{
  "name": "@mobilabs/easing",
  "version": "1.0.2",
  "description": "A simple library that implements Robert Penner's easing equations",
  "main": "_dist/lib/easing.js",
  "minified": "_dist/lib/easing.min.js",
  "unpkg": "_dist/lib/easing.mjs",
  "module": "_dist/lib/easing.min.mjs",
  "bin": {},
  "scripts": {
    "general": " --- GENERAL ---",

    "build:js": " --- JAVASCRIPT --- ",
    "build:js:dev": "node scripts/build.js.dev.js $1",
    "build:js:prod": "node scripts/build.js.prod.js $1",

    "build:css": " --- CSS --- ",

    "build:generic": " --- BUILD (GENERIC) --- ",

    "build:development": " --- BUILD (DEVELOPMENT) --- ",
    "build:dev": "npm run build:js:dev",

    "build:production": " --- BUILD (PRODUCTION) --- ",
    "build:skeleton:prod": "node scripts/build.skeleton.prod.js $1",
    "prebuild:prod": "npm run build:dev && npm run build:skeleton:prod",
    "build:prod": "npm run build:js:prod",

    "testing": " --- TESTING --- ",
    "test": "cross-env NODE_ENV=test c8 --reporter=lcov mocha ./test/main.js",
    "display:coverage": "open -a safari ./coverage/lcov-report/index.html",
    "check:coverage": "c8 check-coverage --statements 80 --branches 70 --functions 100 --lines 80",
    "report": "c8 report",

    "serving": " --- SERVING --- ",
    "server:dev": "http-server --port 8080",
    "server:prod": "http-server --port 8090",

    "watch:js:css": " --- WATCHING --- ",
    "watch:js": "nodemon --watch './src/**/*.js' --exec npm run build:dev",
    "watch": "npm run watch:js",

    "deployment": " --- DEPLOYMENT --- ",
    "dep:prod": "rm -rf _dist-$npm_package_version && npm run build:prod && cp -r _dist _dist-$npm_package_version",

    "others": " --- OTHERS ---",
    "prepare": "husky install",
    "doc": ""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/easing.git"
  },
  "keywords": [
    "ES6",
    "easing equations"
  ],
  "author": {
    "name": "Mobilabs",
    "email": "contact@mobilabs.fr",
    "url": "http://www.mobilabs.fr"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/easing/issues"
  },
  "homepage": "https://github.com/jclo/easing",
  "dependencies": {},
  "devDependencies": {
    "c8": "^9.0.0",
    "chai": "^4.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "terser": "^5.26.0",
    "@mobilabs/es6lib": "2.1.3"
  },
  "c8": {
    "include": [
      "index.js",
      "lib/**/*.js"
    ],
    "exclude": [],
    "all": false
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false
}
